<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/station_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/station_item_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:background="@color/station_item_cover_bg_color" />

        <TextView
            android:id="@+id/station_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/station_item_cover"
            android:layout_toStartOf="@+id/station_item_favorite"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_item_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/station_item_name"
            android:layout_below="@+id/station_item_name"
            android:layout_toStartOf="@+id/station_item_favorite"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/station_item_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/favorite_border_white" />


    </RelativeLayout>

</android.support.v7.widget.CardView>